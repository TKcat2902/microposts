<h1>Update your profile</h1>


<div class="row">
  <div class="col-md-6 col-md-offset-3">
    
    
    <%= form_for(@user) do |f| %>
    
    
      <%= render 'shared/error_messages', object: f.object %> <!-- 6.6エラー表示の追加部分-->
    
    
      <%= f.label :name %>
      <%= f.text_field :name %>


      <%= f.label :age %>
      <%= f.text_field :age %>


      <%= f.label :region %>
      <%= f.text_field :region %>


      <%= f.label :selfintroduction %>
      <%= f.text_field :selfintroduction %>


      <%= f.label :email %>
      <%= f.text_field :email %>
      

      <%= f.label :password %>
      <%= f.password_field :password %>


      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>


      <%= f.submit "Update your account", class: "btn btn-large btn-primary" %>

    <% end %>

  </div>
</div>